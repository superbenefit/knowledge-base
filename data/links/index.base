filters:
  and:
    - file.path.startsWith("links")
    - file.ext == "md"
    - file.basename != "index"
views:
  - type: table
    name: Table
    order:
      - file.name
      - publish
      - url
    sort:
      - property: file.name
        direction: ASC
      - property: url
        direction: ASC
    columnSize:
      file.name: 429
      note.publish: 80
